{% extends '::baseajax.html.twig' %} 

{% block title %}Список страниц{% endblock %}

{% block body %}

<div class="col-xs-12 center_content">
	<div class="post block-border">
		<div class="col-xs-12">
			<div class="col-xs-12">
				<div class="row">
					<a class="btn_link icin_btn" href="{{ path('wiki_add') }}">
						<span class="glyphicon glyphicon-plus"></span> Добавить подстраницу
					</a>
				</div>
			</div>
			{% if wiki|length > 0 %}
				<h3>Список всех страниц</h3>
				<ul>
					{% for item in wiki %}
						<li>
							<a href="{{ path('wiki_show', { 'code': item.code }) }}">{{ item.name }}</a>
							{% include 'Top10CabinetBundle:Wiki:children.html.twig' with { 'item' : item } %}
						</li>
					{% endfor %}
				</ul>
			{% endif %}
		</div>
	</div>
</div>
{% endblock body %}